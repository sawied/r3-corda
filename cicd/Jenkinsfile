pipeline {
    agent any
    tools {
      maven 'maven 3.6.1'
      jdk 'jdk8'
    }

    stages {

     stage ('Initialize'){
       steps {
           sh '''
             echo "path=${path}"
             echo "M2_HOME=${M2_HOME}"
             echo | mvn -version
             echo | java -version
             echo | git --version
           '''
       }
     }

     stage ('SCM'){
       steps {
          checkout scm
          sh "ls -lat"
       }
     }

     stage ('build'){
       steps {
         sh '''
            mvn -f cicd/cicd-mule/pom.xml clean package -DskipTests  -s cicd/settings.xml
         '''
       }
     }


      stage ('MUnit'){
            steps {
              sh '''
                 mvn -f cicd/cicd-mule/pom.xml test  -s cicd/settings.xml
              '''
            }
      }


      stage ('Deploy to Nexus Repository'){
            steps {
               sh '''
                mvn -f cicd/cicd-mule/pom.xml deploy  -s cicd/settings.xml
               '''
            }
      }






    }

}